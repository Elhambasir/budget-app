<style>
  form {
    width:100%
  }
  .form-control {
    outline:0;
    border-radius:0;
  }
</style>
<div class="container bg-secondary d-flex justify-content-center">
  <div class="form-container">
      <div class="bg-light d-flex flex-column align-items-center" style="width:19rem; height:619px;">
<ul class="nav d-flex justify-content-between bg-primary mb-1" style="width:100%">
  <li class="nav-item">
    <a class="nav-link text-light" href="#">'<-'</a>
  </li>
  <li class="nav-item">
    <a class="nav-link text-light" href="#">LOGIN</a>
  </li>
  <li class="nav-item">
    <a class="nav-link text-light" href="#">Log in</a>
  </li>
</ul>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, 
    autofocus: true, 
    autocomplete: "email", 
    placeholder:"Email", 
    class:"text-light border-0 form-control mb-1" %>
  </div>

  <div class="field">
    <%= f.password_field :password, 
    autocomplete: "current-password", 
    placeholder:"Password", 
    class:"border-0 form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Log in", class:"btn btn-primary form-control" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
</div>